<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="101dp"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#40000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/boder_itemdanhmuc"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="145.85dp"
            app:cardCornerRadius="21.34dp">

            <ImageView
                android:id="@+id/item_Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvSpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Tên danh mục"
            android:textColor="#1E355C"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tvSpPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="299999"
            android:textColor="#A5AEBD"
            android:textSize="7.5sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>